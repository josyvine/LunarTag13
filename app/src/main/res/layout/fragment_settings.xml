<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- General Settings Card -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_header_general"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Company Name Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_company_name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/settings_company_name_label">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_company_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Duty Timing Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/settings_duty_timing_label"
                    android:textAppearance="?attr/textAppearanceBody1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_shift_start"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="@string/settings_shift_start_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_shift_start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_shift_end"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="@string/settings_shift_end_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_shift_end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- WhatsApp Group Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_whatsapp_group"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/settings_whatsapp_group_label">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_whatsapp_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Target App Name Input (For Share Sheet) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_target_app"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Target App Name (e.g. WhatsApp(Clone))">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_target_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- ============================================= -->
                <!-- NEW SECTION: WHATSAPP AUTOMATION METHOD       -->
                <!-- ============================================= -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="WhatsApp Automation Method"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <RadioGroup
                    android:id="@+id/radio_group_wa_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radio_method_red_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Option A: Smart Scan (Red Box)"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/radio_method_coordinate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Option B: Manual Coordinates" />
                </RadioGroup>

                <!-- ============================================= -->
                <!-- TRAINING BUTTONS (SHARE SHEET & WHATSAPP)     -->
                <!-- ============================================= -->
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Calibration &amp; Training"
                    android:textStyle="bold" />

                <!-- SHARE SHEET CALIBRATION (EXISTING) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_calibrate_share_icon"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="ðŸŽ¯ Train: Share Sheet Icon"
                    android:textColor="#D32F2F"
                    app:strokeColor="#D32F2F" />

                <!-- NEW: OPTION B TRAINING BUTTONS -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_train_group"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="1ï¸âƒ£ Train: Group Position" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_train_chat_send"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="2ï¸âƒ£ Train: Chat Send Icon" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_train_preview_send"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="3ï¸âƒ£ Train: Final Send Button" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_save_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="16dp"
                    android:text="@string/settings_save_button" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- This is the new button for accessing the admin feature -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_admin_schedule_editor"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Admin: Timestamp Scheduler"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>
</ScrollView>